$boxes = $('<%= j render(@posts) %>')


$('#posts').append( $boxes ).isotope( 'appended', $boxes).imagesLoaded( function(){
  $('#posts').isotope( 'reLayout');
});

<% if @posts.next_page %>
	$('.pagination').replaceWith('<%= j will_paginate(@posts) %>');
<% else %>
	$('.pagination').remove();
<% end %>